{% set isModal = app.request.query.get('isModal') %}
{% set formTheme = isModal ? '@NfqAdmin/_form/_form_theme_modal.html.twig': '@NfqAdmin/_form/bootstrap_3_horizontal_layout.html.twig' %}

{% block edit_form_theme %}
    {% form_theme form formTheme %}
{% endblock %}

{% block delete_form_theme %}
    {% if deleteForm is defined and deleteForm is not empty %}
        {% form_theme deleteForm formTheme %}
    {% endif %}
{% endblock %}
