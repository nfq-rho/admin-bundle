{% trans_default_domain 'adminInterface' %}

{% set isModal = isModal|default(false) %}
{% set forceConfirm = forceConfirm|default(false) %}

{% if form is not empty %}
    <div class="row">
        <div class="col-lg-12">
            {% form_theme form '@NfqAdmin/_form/bootstrap_3_horizontal_layout.html.twig' %}

            {{ form_start(form) }}

            {% set attr = form.submit_delete.vars.attr %}
            {% if not isModal or forceConfirm %}
                {% set attr = attr|merge({'data-toggle': 'modal', 'data-href': form.vars.action}) %}
            {% endif %}

            {{ form_row(form.submit_delete, {'attr': attr}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endif %}
