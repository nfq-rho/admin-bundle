{% import '@NfqAdmin/_macro/sorting.html.twig' as nfqSorting %}
<div class="col-lg-12">
    {{ nfqSorting.getHiddenFields(nfq_admin_context.default_max_per_page) }}
    {{ nfqSorting.getSearchFields() }}

    <div class="btn-group pull-right">
        <button type="submit" class="btn btn-default">
            <i class="fas fa-search"></i>
        </button>

        <a href="{{ resetUri }}" class="btn btn-default" title="{{ 'generic.reset_search_params'|trans }}">
            <i class="fas fa-times"></i>
        </a>
    </div>
</div>
