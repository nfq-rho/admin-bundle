{% import 'NfqAdminBundle:_macro:sorting.html.twig' as nfqSorting %}
<div class="col-lg-12">
    {{ nfqSorting.getHiddenFields() }}
    {{ nfqSorting.getSearchFields() }}

    <div class="btn-group pull-right">
        <button type="submit" class="btn btn-default">
            <i class="fa fa-search"></i>
        </button>

        <a href="{{ resetUri }}" class="btn btn-default" title="{{ 'generic.reset_search_params'|trans }}">
            <i class="fa fa-times"></i>
        </a>
    </div>
</div>
